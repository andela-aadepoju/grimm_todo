<div class="container">
  <div class="row">
    <div class="col-md-12 ">
      <h3><%= @post.title %></h3>

      <hr>
      <p class = "text-justify"><%= @post.body %></p>
      <br>
      <p>
      <div class="pull-left">
        <h6> Created on <%= DateTime.parse(@post.created_at).strftime("%A, %B %d, %Y at %I:%M%p") %></h6>
      </div>
      <div class="pull-right">
      <a href="/" class="btn btn-primary btn-sm">Back</a>
      <a href="/posts/edit/<%= post.id %>" class="btn btn-info btn-sm" role="button">Edit</a>
      <a href="/posts/delete/<%= post.id %>?id=<%= post.id %>" class="btn btn-danger btn-sm " role="alert">Delete</a>
      </div>
      <br>
    </p>
  </div>

</div>
